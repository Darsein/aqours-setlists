.container
  .card
    .card-content
      span.card-title イベント一覧
      .row
        .col.s12
          p#notice = notice

      .row
        .col.s12
          - @events.group_by {|event| event.setlists.first.started_at.year}.each do |year, events|
            .section
              h5 = year

              table.striped
                thead
                  tr
                    th 開演
                    th イベントタイトル

                tbody
                  - events.each do |event|
                    tr
                      td.right-align = period_in_words(*event.period)
                      td
                        = link_to event.title, event
                        - event.tag_list.each do |tag|
                          span.chip.orange.white-text = tag
